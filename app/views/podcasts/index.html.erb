<div id="banner" class="podcasts_banner">
		<h1>Create <span class="dot"></span> Listen <span class="dot"></span> Discover</h1>
		<p class="banner_info">Your Podcast Platform</p>
	</div>
	
	<div id="podcasts" class="clearfix">
		<div class="wrapper">
			<ul class="clearfix">
			  <% @podcasts.each do |podcast| %> <!-- using the @podcasts method defined in podcasts_controller, Loop through all of the podcasts & for each podcast print out and run the code within the block -->
			      <%= link_to podcast do %> <!-- Dynamic link allwoing user to access the podcast show page -->
					<li>
						<%= image_tag podcast.thumbnail.url(:medium) %> <!-- paperclip -->
						<div class="podcast_overview">
					    <h2><%= podcast.title %></h2> <!-- using the title from the podcast table -->
						</div>
					</li>
			      <% end %>
			 <% end %>
			</ul>
			
			<%= will_paginate @podcasts %> <!-- pagination gem calling on the podcasts -->
	</div>
</div>