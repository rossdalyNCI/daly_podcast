<div id="podcast_show">
		<div id="show_banner">
			<div class="wrapper_thin">
				<h1><%= @podcast.title %></h1>
			</div>
		</div>
			
		<div id="links">
			<div class="wrapper_thin">
				<ul>
					<li><%= link_to "Episodes", root_path %></li> <!-- dynamic link for the episodes root path to the podcast#dashboard -->
					<li><%= link_to "New Episode", new_podcast_episode_path(@podcast) %></li> <!-- dynamic link to new episode nested within a podcast, found in rake routes -->
					<li><%= link_to "Account Settings", edit_podcast_registration_path, class: "current" %></li> <!-- dynamic link to edit a podcast path -->
					<li><%= link_to "View Podcast", podcast_path(current_podcast) %></li> <!-- dynamic link to the podcast path of the current users podcast -->
				</ul>
			</div>
		</div>
</div>
<div id="form">
  <div class="wrapper_thin">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description %>
      </div>
      
      <div class="field">
        <%= f.label :thumbnail %><br /> <!-- paperclip -->
        <%= f.file_field :thumbnail %>  <!-- paperclip -->
      </div>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      
      <h2>Links</h2>
      
      <div class="field">
        <%= f.label :itunes %><br />
        <%= f.text_field :itunes %>
      </div>
      
      <div class="field">
        <%= f.label :twitter %><br />
        <%= f.text_field :twitter %>
      </div>
      
      <div class="field">
        <%= f.label :instagram %><br />
        <%= f.text_field :instagram %>
      </div>
    
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Update", class: "button button_highlight button_block" %>
      </div>
    <% end %>
    
    <h3>Cancel my account</h3>
    
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
